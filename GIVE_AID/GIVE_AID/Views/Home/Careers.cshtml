@model about_cwu

@{
    ViewData["Title"] = "Careers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="page_breadcrumbs offset_breadcrumbs ds ms parallax section_padding_50">
	<div class="container with_top_border">
		<div class="row">
			<div class="col-sm-6 text-center text-sm-left">
				<h2>Careers</h2>
			</div>
			<div class="col-sm-6 text-center text-sm-right">
				<ol class="breadcrumb darklinks grey">
					<li>
						<a asp-action="home">
							Home
						</a>
					</li>
					<li>
						<a asp-action="careers">Pages</a>
					</li>
					<li class="active">Careers</li>
				</ol>
			</div>
		</div>
	</div>
</section>

<section class="ls section_padding_top_100">
	<div class="container">
		<div class="row">
			<div class="col-md-10 col-md-offset-1 text-center">
				<h2 class="section_header bold">
					Who we are
					<span class="highlight">looking for?</span>
				</h2>
				<p>
					Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua. At vero eos et accusam et justo duo dolores et ea rebum.
				</p>
			</div>
		</div>
		<div class="row topmargin_60">
			<div class="col-md-6">
				<h2 class="black highlight">Join Us to Save life</h2
				<form class="donator-form topmargin_30" method="post" enctype="multipart/form-data" >
					<div class="form-group">
						<label  class="sr-only">
							Name
							<span class="required">*</span>
						</label>
						<!-- <i class="rt-icon2-user-outline"></i> -->
						<input type="text" asp-for="name"  class="form-control" placeholder="name">
					</div>
					<div class="form-group">
						<label  class="sr-only">Email</label>
						<!-- <i class="rt-icon2-mail2"></i> -->
						<input type="email"  asp-for="email" class="form-control" placeholder="email">
					</div>
					<div class="form-group">
						<label class="sr-only">Phone</label>
						<!-- <i class="rt-icon2-pencil3"></i> -->
						<input type="number" asp-for="contact" class="form-control" placeholder="phone">
					</div>
					<div class="form-group">
						<label  class="sr-only">CV</label>
						<!-- <i class="rt-icon2-pencil3"></i> -->
						<input type="file"  asp-for="cv" class="form-control" placeholder="CV">
					</div>
					<div class="form-submit">
						<button type="submit" class="theme_button">Send application</button>
					</div>
				</form>
			</div>
			
		</div>
	</div>
</section>


