@model IEnumerable<HelpCentre>
@{
    ViewData["Title"] = "Help_Center";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

	<section class="page_breadcrumbs offset_breadcrumbs ds ms parallax section_padding_50">
				<div class="container with_top_border">
					<div class="row">
						<div class="col-sm-6 text-center text-sm-left">
							<h2>Help Center</h2>
						</div>
						<div class="col-sm-6 text-center text-sm-right">
							<ol class="breadcrumb darklinks grey">
								<li>
									<a asp-action="index" asp-controller="home">
							Home
						</a>
								</li>
								<li>
						<a asp-action="faq" asp-controller="home">Pages</a>
								</li>
								<li class="active">Help Center</li>
							</ol>
						</div>
					</div>
				</div>
			</section>

			<section class="ls section_padding_100">
				<div class="container">
					<div class="row">
						<div class="col-md-10 col-md-offset-1 text-center">
							<h2 class="section_header bold">Frequently asked
								<span class="highlight">questions</span>
							</h2>
							<p>Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua. At vero eos et accusam et justo duo dolores et ea rebum.</p>

							

						</div>
					</div>
		<div class="row">
			<div class="col-sm-12">
				<div class="tab-content" id="faq_accordion">
					@foreach (var i in Model)
					{
						<div class="tab-pane fade in active">
							<div class="panel panel-default">
								<div class="panel-heading">
									<h3>@i.category</h3>
									<h4 class="panel-title">
										<a data-toggle="collapse" href="#collapse@(i.id)" class="collapsed">@i.question</a>
									</h4>
								</div>
								<div id="collapse@(i.id)" class="panel-collapse collapse">
									<div class="panel-body">
										<img src="~/@i.image" alt="" class="alignleft" /> @i.answer
									</div>
								</div>
							</div>
						</div>
					}
				</div>
			</div>
		</div>

				</div>
			</section>
