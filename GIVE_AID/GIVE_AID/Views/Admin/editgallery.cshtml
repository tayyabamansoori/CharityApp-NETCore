@model Gallery
@{
    // ViewData["Title"] = "Admin_Gallery";
    Layout = "~/Views/Shared/admin_layout.cshtml";
}

<section class="ls section_padding_top_50 section_padding_bottom_50 columns_padding_10">
    <div class="container-fluid">
        <section class="ls section_padding_top_50 section_padding_bottom_50 columns_padding_10">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-12">
                        <h3>
                            EDIT GALLERY
                        </h3>
                    </div>
                </div>
                <!-- .row -->

                <div class="row justify-content">
                    <!-- Center the form -->
                    <div class="col-xs-12 col-md-6">
                        <!-- Basic form -->
                        <div class="form-container ">
                            <!-- Added a container for the form -->
                            <form method="post" enctype="multipart/form-data">
                                <!-- Form elements go here -->
                                <div class="form-group">
                                    <label for="category"><h5>Category:</h5></label>
                                    <input type="text" asp-for="category" class="form-control" placeholder="Add Category">
                                </div>

                                <div class="form-group">
                                    <label for="description"><h5>Description:</h5></label>
                                    <input type="text" asp-for="desc" class="form-control" placeholder="Enter Description">
                                </div>

                                <div class="form-group">
                                    <label for="picture"><h5>Gallery Image:</h5></label>
                                    <input type="file" name="img" class="form-control" placeholder="Enter Picture URL">
                                    <!-- Image placeholder -->
                                    <!-- <img src="placeholder.jpg" alt="Image" class="img-fluid"> -->
                                </div>

                                <button type="submit" class="theme_button">Edit</button>
                            </form>
                            <p> @ViewBag.e</p>
                        </div>
                    </div>
                    <!-- .col-* -->
                </div>
                <!-- .row -->
            </div>
            <!-- .container-fluid -->
        </section>
    </div>
</section>




