@model IEnumerable<AddDonation>
@{
    // ViewData["Title"] = "CausesManagement";
    Layout = "~/Views/Shared/admin_layout.cshtml";
}

<section class="ls section_padding_top_50 section_padding_bottom_50 columns_padding_10">
    <div class="container-fluid">
        <section class="ls section_padding_top_50 section_padding_bottom_50 columns_padding_10">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-12">
                        <h3>Causes Management</h3>
                    </div>
                </div>
                <!-- .row -->
                <!-- .row -->
                <!-- Display list of causes -->
                <div class="row justify-content-center mt-4">
                    <div class="col-md-6">
                        <div class="causes-list">
                            <h4>List of Causes:</h4>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Cause</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var cause in ViewBag.ep)
                                    {
                                        <tr>
                                            <td>@cause.cause</td>
                                            
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- .row -->
            </div>
            <!-- .container-fluid -->
        </section>
    </div>
</section>



<style>
    .form-container {
        background-color: #f9f9f9;
        padding: 30px;
        border-radius: 10px;
        margin-bottom: 20px;
        box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
    }

    .causes-list {
        background-color: #f0f0f0;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
    }

    .form-container h5 {
        margin-top: 0;
    }

    .form-control {
        border-radius: 20px;
        border-color: #ced4da;
    }

    .theme_button {
        background-color: #dc3545;
        border-color: grey;
        border-radius: 20px;
        color: #fff;
        padding: 10px 20px;
        margin-top: 20px;
    }

        .theme_button:hover {
            background-color: gray;
            border-color: dimgrey;
        }

    .delete-cause {
        background-color: #dc3545;
        border-color: #dc3545;
        color: #fff;
        margin-left: 10px;
        margin-top: 5px; /* Add margin-top for space */
    }

        .delete-cause:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }
</style>
